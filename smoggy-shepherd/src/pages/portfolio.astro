---
import Layout from '../layouts/Layout.astro';
import { portfolioServices } from '../data/portfolio';
---

<Layout>
	<Fragment slot="head">
		<title>Portfolio | Alex Flooring & Carpentry LLC</title>
		<meta name="description" content="Explore our service portfolio: flooring, decks, painting, remodeling, kitchens, and bathrooms in Northern Virginia." />
	</Fragment>

	<main id="main-content" class="bg-neutral">
		<section class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10 sm:py-12 md:py-16">
			<nav aria-label="Breadcrumb" class="text-sm text-primary/80">
				<a href="/" class="hover:underline focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent">Home</a>
				<span aria-hidden="true" class="mx-2">/</span>
				<span aria-current="page" class="font-medium">Portfolio</span>
			</nav>

			<h1 class="mt-4 text-3xl sm:text-4xl md:text-5xl font-extrabold tracking-tight text-primary">Portfolio by Service</h1>
			<p class="mt-3 max-w-2xl text-base sm:text-lg text-primary/80">
				Browse project galleries by service category.
			</p>

			<div class="mt-10 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
				{portfolioServices.map((service) => (
					<article class="group rounded-lg border border-primary/10 bg-neutral shadow-sm overflow-hidden transition duration-200 hover:shadow-md hover:-translate-y-0.5 focus-within:shadow-md focus-within:-translate-y-0.5">
						<a href={`/portfolio/${service.slug}`} class="block" aria-label={`Open ${service.title} portfolio`}>
							<div class="relative w-full pb-[66%] overflow-hidden bg-primary/5">
								<img src={service.heroImage} alt={`${service.title} representative image`} loading="lazy" decoding="async" class="absolute inset-0 h-full w-full object-cover transition-transform duration-300 group-hover:scale-[1.03]" />
							</div>
							<div class="p-5">
								<h2 class="text-xl font-bold tracking-tight text-primary">{service.title}</h2>
								<p class="mt-2 text-primary/80">{service.blurb}</p>
								<div class="mt-4 h-0.5 w-12 bg-accent"></div>
							</div>
						</a>
					</article>
				))}
			</div>
		</section>
	</main>
</Layout>
